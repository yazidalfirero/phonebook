<div class="container">
  <div class="row">
    <div class="col-lg-7 mt-4">
      <p>
        <strong>Name :</strong>
        <%= @user.name %>
      </p>
      <p>
        <strong>Email :</strong>
        <%= @user.email %>
      </p>
      <p>
        <strong>Phone :</strong>
        <%= @user.phone %>
      </p>
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary btn-md" %>
      <%= link_to 'Back', users_path, class: "btn btn-outline-primary btn-md" %>
    </div>
  </div>
</div>
