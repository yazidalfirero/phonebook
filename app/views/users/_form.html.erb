<%= form_with(model: user, local: false) do |form| %>
  <div class="modal-body">
    <div id="errorArea">
    </div>
    <div class="form-group mt-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group mt-3">
      <%= form.label :phone %>
      <%= form.text_field :phone, class: "form-control" %>
    </div>
    <%# <div class="form-group mt-4 mb-5"> %>
    <%# <%= link_to 'Back', users_path, class: "btn btn-outline-primary btn-md" %>
    <%# </div> %>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary btn-md close-modal" data-bs-dismiss="modal">Close</button>
    <%= form.submit class: "btn btn-primary btn-md" %>
  </div>
<% end%>
